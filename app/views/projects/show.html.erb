<h1><%= @project.name %></h1>

<p class="lead"><%= @project.summary %></p>
<p><%= markdown @project.description %></p>

<div>
  <%= render partial: status_partial_for_user_project(@project_presenter.current_user_project) %>
</div>

<h2>What exactly will my program need to do?</h2>
<div class="accordion" id="accordion1">
  <%= render @project.goals %>
</div>

<div class="row-fluid">
  <ul id="working-users" class="span6">
    <%= render @project_presenter.worked_on_user_projects %>
  </ul>
  <ul id="finished-users" class="span6">
    <%= render @project_presenter.completed_user_projects %>
  </ul>
</div>