<%= semantic_form_for(@project) do |f| %>
  <%= f.inputs do %>
    <%= f.input :group, include_blank: false, input_html: {class: "input-medium"} %>
    <%= f.input :name %>
    <%= f.input :summary %>
    <%= f.input :description, input_html: {class: "input-xxlarge"} %>
  <% end %>
  <%= f.actions %>
<% end %>
