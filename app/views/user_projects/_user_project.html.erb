<li>
  <%= image_tag user_project.user.image_url, alt: "#{user_project.display_name}'s avatar", height: 50, width: 50%>
  <%= link_to user_project.display_name, user_path(user_project.user) %>
  <% if user_project.percentage_completion == 100 %>
    has completed this project
  <% else %>
    started work on this <%= distance_of_time_in_words_to_now(user_project.created_at) %> ago
    <% if user_project.percentage_completion > 0 %>
      and is <%= user_project.percentage_completion %>% done
    <% end %>
  <% end %>
</li>